<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="admin" id="1">

        <createTable tableName="Projects">
            <column name="project_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="application_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="VARCHAR2(255)">
                <constraints nullable="false"/>
            </column>

            <column name="employment_mode" type="VARCHAR2(255)">
                <constraints nullable="false"/>
            </column>

            <column name="capacity" type="VARCHAR2(255)">
                <constraints nullable="true"/>
            </column>

            <column name="duration" type="VARCHAR2(255)">
                <constraints nullable="false"/>
            </column>

            <column name="starting_year" type="int">
                <constraints nullable="false"/>
            </column>

            <column name="role" type="VARCHAR2(255)">
                <constraints nullable="false"/>
            </column>

            <column name="team_size" type="int">
                <constraints nullable="false"/>
            </column>

            <column name="repo" type="VARCHAR2(255)">
                <constraints nullable="true"/>
            </column>

            <column name="live_url" type="VARCHAR2(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>